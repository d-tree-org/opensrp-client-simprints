<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/capture_finger_print_btn"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="@string/register_finger_print"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="200dp"
        />

    <Button
        android:id="@+id/verify_btn"
        android:text="@string/verify_finger_print"
        android:layout_below="@+id/capture_finger_print_btn"
        android:layout_margin="20dp"
        android:layout_centerHorizontal="true"
        android:layout_width="200dp"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/identify_btn"
        android:text="@string/identify_fingerprint"
        android:layout_below="@+id/verify_btn"
        android:layout_margin="20dp"
        android:layout_centerHorizontal="true"
        android:layout_width="200dp"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/text_status"
        android:padding="10dp"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/colorPrimary"
        android:layout_below="@+id/identify_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</RelativeLayout>